<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<constant name="struts.devMode" value="true" />
	<constant name="struts.multipart.maxSize" value="504288000" />
	<constant name="struts.i18n.encoding" value="utf-8" />
	<!-- 开启DMI，解决通配符调用struts2的问题 -->
	<constant name="struts.enable.DynamicMethodInvocation" value="true" />
 	<package name="base" extends="struts-default" namespace="/">
		<action name="login" class="com.zhangpan.ssh.action.LoginAction" >
			<result name="success">index.jsp</result>
		</action>
		<action name="flow" class="com.zhangpan.ssh.action.FlowchartshowingAction">
		</action>
 	</package>
</struts>
	
