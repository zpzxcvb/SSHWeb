<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zhangpan.dao.sys.SysUserInfoDao">

	<!-- 保存用户基本资料 -->
	<insert id="save" parameterType="SysUserInfo">
		insert into sys_user_info
			(user_id,real_name,nick_name,phone,email,sex,birthday)
		values
			(#{userId},#{realName},#{nickName},#{phone},#{email},#{sex},#{birthday})
	</insert>

	<!-- 修改用户基本资料 -->
	<update id="update" parameterType="SysUserInfo">
		update sys_user_info
		<set>
			<if test="realName != null">
				real_name=#{realName},
			</if>
			<if test="nickName != null">
				nick_name=#{nickName},
			</if>
			<if test="phone != null">
				phone=#{phone},
			</if>
			<if test="email != null">
				email=#{email},
			</if>
			<if test="sex != null">
				sex=#{sex},
			</if>
			<if test="birthday != null">
				birthday=#{birthday},
			</if>
		</set>
		where user_id = #{userId}
	</update>
	
	<!-- 根据参数查询用户信息 -->
	<select id="findByParams" parameterType="int" resultType="SysUserInfo">
		select * from sys_user_info
		where user_id = #{userId}
	</select>
</mapper>