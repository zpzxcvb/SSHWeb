<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zhangpan.dao.SysUserDao" >
  <resultMap id="BaseResultMap" type="SysUser" >
    <id column="user_id" property="userId" jdbcType="INTEGER" />
    <result column="user_name" property="userName" jdbcType="VARCHAR" />
    <result column="realname" property="realname" jdbcType="VARCHAR" />
    <result column="password" property="password" jdbcType="VARCHAR" />
    <result column="mobile" property="mobile" jdbcType="VARCHAR" />
    <result column="email" property="email" jdbcType="VARCHAR" />
    <result column="create_time" property="createTime" jdbcType="VARCHAR" />
    <result column="status" property="status" jdbcType="INTEGER" />
  </resultMap>
  
  <sql id="userColumns"> * </sql>
  
  <insert id="save" parameterType="SysUser">
  	insert into sys_user(user_name,realname,password,mobile,email,create_time,status) values(#{user_name},#{realname},#{password},#{mobile},#{email},#{create_time},#{status})
  </insert>
  
  <delete id="delete" parameterType="int">
  	delete from sys_user where user_id=#{userId}
  </delete>
  
  <delete id="deleteArray" parameterType="int">
  	delete from sys_user where user_id in
  	<foreach collection="array" item="item" open="(" separator="," close=")"> 
  		#{item} 
  	</foreach>
  </delete>
  
  <update id="update" parameterType="SysUser">
  	update sys_user set user_name=#{sname} , password=#{password} , mobile=#{mobile} where user_id = #{userId}
  </update>
  
  <select id="findById" parameterType="int" resultType="SysUser">
  	select <include refid="userColumns" /> from sys_user where user_id=#{userId}
  </select>
  
  <select id="findAll" resultMap="BaseResultMap">
  	select <include refid="userColumns" /> from sys_user
  </select>
</mapper>