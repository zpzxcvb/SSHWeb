<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zhangpan.dao.SysUserDao" >
  <resultMap id="userResultMap" type="SysUser" >
    <id column="user_id" property="userId"/>
    <result column="user_name" property="userName"/>
    <result column="password" property="password"/>
    <result column="create_time" property="createTime"/>
    <result column="login_time" property="loginTime"/>
    <result column="last_login_time" property="lastloginTime"/>
    <result column="status" property="status"/>
  </resultMap>
  
  <sql id="userColumns"> * </sql>
  
  <insert id="save" parameterType="SysUser" useGeneratedKeys="true" keyProperty="userId">
  	insert into sys_user
  		(user_name,password,create_time,status)
  	values
  		(#{userName},#{password},#{createTime},0)
  </insert>
  
  <delete id="delete" parameterType="int">
  	delete from sys_user where user_id=#{userId}
  </delete>
  
  <delete id="deleteArray" parameterType="int">
  	delete from sys_user where user_id in
  	<foreach collection="array" item="item" open="(" separator="," close=")"> 
  		#{item} 
  	</foreach>
  </delete>
  
  <update id="update" parameterType="SysUser">
  	update sys_user
  	<set>
  		<if test="password != null">
  			password=#{password},
  		</if>
  	</set>
	where user_id = #{userId}
  </update>
  
  <select id="findById" parameterType="int" resultType="SysUser">
  	select <include refid="userColumns" /> from sys_user where user_id=#{userId}
  </select>
  
  <select id="findAll" resultMap="userResultMap">
  	select <include refid="userColumns" /> from sys_user
  </select>
</mapper>